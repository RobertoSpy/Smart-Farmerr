using namespace std;
vector<int>COW(2,1);
vector<int>PIG(2,2);
vector<int>HORSE(2,3);
vector<int>SHEEP(2,4);
vector<int>FENCE(3,-1);

int a[101][101];



void afisarematrice()
{
    for (int  i = 0; i < 7; i++) {
        for ( int j = 0; j < 9; j++)
            cout << a[i][j] << " ";
        cout << endl;
    }

}

void bordarematrice()
{
    for (i = 0; i < 7; i++)
        for (j = 0; j < 9; j++)
        {
            a[0][j] = -1;
            a[i][0] = -1;
            a[6][j] = -1;
            a[i][8] = -1;
        }
}
bool validgard(int i, int j);
{
    return i % 2 == 0 || j % 2 == 0;
}
bool validpiese(int i, int j)
{
    return i % 2 == 1 || j % 2 == 1;
}
int randompiese()
{
        random_shuffle(a[i][j], COW[])
        random_shuffle(a[i][j], PIG[])
        random_shuffle(a[i][j], HORSE[])
        random_shuffle(a[i][j], SHEEP[])
       
}

